{
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "doppler.autocomplete.enable": true,
  "doppler.hover.enable": true,

  "files.readonlyInclude": {
		"**/next-env.d.ts": true,
    "**/*.md": true,
    "**/*.mjs": true,
    "LICENSE": true,
    "**/CODEOWNERS": true
	},
	"files.watcherExclude": {
		"**/next-env.d.ts": true,
    "**/*.md": true,
    "**/*.mjs": true,
    "LICENSE": true,
    "**/CODEOWNERS": true
	},
	"search.exclude": {
		"**/next-env.d.ts": true
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit"
	}
}
